<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="peterkhlopenkov.rapbeat.MainActivity"
    android:orientation="vertical"
    android:weightSum="5.75"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="@string/kick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Kick"
                    android:background="@drawable/kick_button"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="100dp"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:onClick="buttonClicked"/>

                <Button
                    android:text="@string/snare"
                    android:layout_width="match_parent"
                    android:id="@+id/Snare"
                    android:background="@drawable/snare_button"
                    android:textSize="100dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:onClick="buttonClicked"/>

                <Button
                    android:text="@string/perc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Percussion"
                    android:background="@drawable/percussion_button"
                    android:textSize="100dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:onClick="buttonClicked"/>

                <Button
                    android:text="@string/chord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Chords"
                    android:background="@drawable/chords_button"
                    android:textSize="100dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:onClick="buttonClicked"/>

                <Button
                    android:text="@string/bass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Bass"
                    android:background="@drawable/bass_button"
                    android:textSize="100dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:onClick="buttonClicked"/>
                <Button
                    android:text="@string/fx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Fx"
                    android:background="@drawable/extra_button"
                    android:textSize="100dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:textColor="#ffffff"
                    android:onClick="buttonClicked"/>

            </LinearLayout>
        </ScrollView>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="peterkhlopenkov.rapbeat.BottomSectionFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/bottom_section_fragment"
        android:layout_weight="0.75" />

</LinearLayout>